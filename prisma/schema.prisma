enum ReviewType {
  LEGAL
  TECHNICAL
  ETHICS
  RISK
  COMPLIANCE
}

enum ReviewStatus {
  PENDING
  IN_PROGRESS
  APPROVED
  REJECTED
  CONDITIONAL
}

enum DocumentTemplateCategory {
  TECHNICAL_DOCUMENTATION
  INSTRUCTIONS_FOR_USE
  RISK_MANAGEMENT
  CONFORMITY_DECLARATION
  EU_DATABASE_REGISTRATION
  TRAINING_DATA_SUMMARY
  GPAI_MODEL_CARD
  IMPACT_ASSESSMENT
  AUDIT_REPORT
  OTHER
}

enum AssessmentType {
  CONFORMITY_ASSESSMENT
  RISK_ASSESSMENT
  IMPACT_ASSESSMENT
  COMPLIANCE_REVIEW
  TECHNICAL_REVIEW
  LEGAL_REVIEW
  ETHICS_REVIEW
  CONTINUOUS_MONITORING
}

enum AssessmentStatus {
  NOT_STARTED
  IN_PROGRESS
  BLOCKED
  UNDER_REVIEW
  COMPLETED
  APPROVED
  REJECTED
  CANCELLED
}